<div class="container margin-top-20">
  <div class="row">
    <div class="col-sm-12">
      <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#add-member">Add Member</button>
    </div>
  </div>

  <% @members.each do |member| %>
  <div class="row margin-top-20">
    <div class="col-sm-3">
      <img class="img-responsive img-circle" src="<%= image_path(member.avatar.url) %>" />
    </div>
    <div class="col-sm-9">
      <h2 class="margin-top-40"><%= member.member_name %></h2>
    </div>
  </div>
  <% end %>
</div>

<%= form_for :member, url: members_path, html: { multipart: true } do |form| %>
  <div id="add-member" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Add Member</h4>
        </div>
        <div class="modal-body">
          <div class="bold">
            Member Name
          </div>
          <div class="margin-top-20">
            <%= form.text_field :member_name, class: "form-control", placeholder: "Member Name" %>
          </div>
          <div class="bold margin-top-20">
            Upload Photo
          </div>
          <div class="margin-top-20">
            <%= form.file_field :avatar %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save Member</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
<% end %>