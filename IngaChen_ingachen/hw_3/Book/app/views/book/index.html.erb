<!DOCTYPE html>
<html>
<head>
	<title>Book Manager App</title>

	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">

	<!-- Optional theme -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">

	<link rel="stylesheet" href="/assets/stylesheets/style.css" />
</head>
<body>

<div class="container">
	<div class="margin-top-20">
		<a href="#" data-toggle="modal" data-target="#add-book-modal" class="btn btn-primary">Add New Book</a>
	</div>
	<!--One Wine-->
	<% @books.each do |book| %>
	<div class="row margin-top-20 wine-container">
		<div class="col-sm-3">
			<img src="<%= book.image %>" class="img-responsive" />
		</div>
		<div class="col-sm-9">
			<div class="margin-top-20">
				<span class="bold">Title: </span><%= book.title %></span>
			</div>
			<div>
				<span class="bold">Author: </span><%= book.author %></span>
			</div>
			<div>
				<span class="bold">Release Date: </span><%= book.release_date.strftime("%B %-d, %Y") %></span>
			</div>
			<div class="margin-top-20">
				<a href="#" class="btn btn-default">Edit Book</a>
			</div>
		</div>
	</div>
	<% end %>
	<!--/One Book-->
</div>

<!--Add Book Modal-->
<div id="add-book-modal" class="modal fade">
	<%= form_for :book, url: books_path do |f| %>
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Add New Book</h4>
			</div>
			<div class="modal-body">
				<div class="margin-top-20">
					<%= f.label :title %><br>
					<input type="text" class="form-control" <%= f.text_field :title %>
				</div>
				
				<div class="bold margin-top-20">
					<%= f.label :author %><br>
					<input type="text" class="form-control" <%= f.text_field :author %>
				</div>
				
				<div class="bold margin-top-20">
					<%= f.label :release_date %><br>
					<input type="text" class="form-control" <%= f.text_field :release_date %>
				</div>
				<div class="bold margin-top-20">
					<%= f.label :image %><br>
					<input type="text" class="form-control" <%= f.text_field :image %>
				</div>
				
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<%= f.submit 'Save Book', class: 'btn btn-primary' %>
			</div>
			
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
	<% end %>
</div><!-- /.modal -->
<!--/Add Wine Modal-->

<!--jQuery-->
<script src="http://code.jquery.com/jquery-2.1.3.min.js"></script>

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

</body>
</html>