

<div class="container">
	<h1>Courses</h1>

	<div>
		<a href="#" class="btn btn-primary" data-target="#add-course-modal" data-toggle="modal">Add Course</a>
	</div>
</div>

<div class="container margin-top-20">
<% if flash[:error] %>
    <div class="alert alert-danger">
    <%= flash[:error] %>
    </div>
<% end %>
	<table class="table striped">
		<thead>
			<th>Name</th>
			<th>Email</th>
			<th>Age</th>

		</thead>

		<tbody>
			<% @courses.each do |course|  %>
			<tr>
				<td>
					<%= course.name %>
				</td>
				<td>
					<%= course.length %>
				</td>
				<td>
					<%= course.difficulty %>
				</td>



				
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

<%= form_for @course do |f| %>
<div id="add-course-modal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title">Add a Course</h4>
			</div>
			<div class="modal-body">
				<div class="bold">
					Name
				</div>
				<div class="margin-top-20">
				    <%= f.text_field :name %>
				</div>
				<div class="bold margin-top-20">
					Length
				</div>
				<div class="margin-top-20">
					<%= f.text_field :length %>
				</div>
				<div class="bold margin-top-20">
					Difficulty
				</div>
				<div class="margin-top-20">
					<%= f.text_field :difficulty %>
				</div>
				
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="submit" class="btn btn-primary">Save Course</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<% end %>

