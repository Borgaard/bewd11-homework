<!DOCTYPE html>
<html>
<head>
	<title>Member List</title>

	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />

	<link rel="stylesheet" href="/assets/style.css" />
</head>
<body>

<div class="container margin-top-20">
	<div class="row">
		<div class="col-sm-12">
			<button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#add-member">Add Member</button>
		</div>
	</div>
<% @members.each do |member| %>
	<div class="row margin-top-20">
		<div class="col-sm-3">
		    <%= image_tag member.image.url(:medium), class: "img-responsive img-circle" %>
		</div>
		<div class="col-sm-9">
			<h2 class="margin-top-40"><%=member.member_name%></h2>
		</div>
	</div>
	<%end%>
</div>

<div id="add-member" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Add Member</h4>
			</div>
			<%= form_for @new_member, :html => {multipart: true } do |new_member| %>
			<div class="modal-body">
				<div class="bold">
					Member Name
				</div>
				<div class="margin-top-20">
					<%= new_member.text_field :member_name, class: "form-control", placeholder: "Member Name" %>
				</div>
				<div class="bold margin-top-20">
					Upload Photo
				</div>
				<div class="margin-top-20">
					<%= new_member.file_field :image %>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="submit" class="btn btn-primary">Save Member</button>
			</div>
			<%end%>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

</body>
</html>